@model IEnumerable<Assortie.Models.Sortie>

@{
    ViewBag.Title = "ListeSortiesAsso";
}

<h3>Liste des sorties correspondant à votre association</h3>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CapaciteActuelle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CapaciteMaximum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Association.Nom)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Photo)" height="100px" width="200px" alt="Card image cap">
        </td>
        <td>
            @if (item.Date != null)
            {@item.Date.ToString("dd/MM/yyyy")}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CapaciteActuelle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CapaciteMaximum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Association.Nom)
        </td>
    </tr>
}

</table>
