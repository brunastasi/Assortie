@{
    string isConnected = Session["Adherent"] != null ? "true" : "false";
    Assortie.Models.Adherent adherent = (Assortie.Models.Adherent)Session["Adherent"];
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Assortie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{

        if (isConnected == "true" && adherent.Responsable == true)
        {
            @Html.Partial("_Responsable")
        }
        else if (isConnected == "true")
        {
            @Html.Partial("_Adherents")
        }
        else
        {
            @Html.Partial("_Index")
        }

    }

    <div class="container body-content">
        @RenderBody()
        <footer id="sticky-footer" class="py-4 bg-white text-black-50 mt-1">
            <div class="container text-center">
                <small>Copyright &copy; @DateTime.Now.Year - Assortie</small>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
